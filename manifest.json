{
    "manifest_version": 3,
    "name": "Xitomatitos",
    "version": "1.1",

    "description": "__MSG_extDesc__",
    "homepage_url":"https://github.com/UlisesFco/xitomatitos",
    "icons": {
        "32": "icons/xitomatitos-32.png",
        "48": "icons/xitomatitos-48.png",
        "128": "icons/xitomatitos-128.png"
    },

    "permissions": [
        "notifications",
        "alarms",
        "storage"
    ],

    "background": {
        "service_worker": "popups/background.js"
    },

    "action":{
        "default_icon": "icons/xitomatitos-48.png",
        "default_title": "Xitomatitos",
        "default_popup": "popups/popup.html"
    },

    "default_locale":"en"
}